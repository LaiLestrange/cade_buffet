<h1>Editar Buffet <%= @buffet.brand_name %></h1>

<% if @buffet.errors.any? %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @buffet.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div id="edit_buffet">
  <%= form_with model: @buffet do |f| %>

    <div class="field">
      <%= f.label :brand_name %> <br />
      <%= f.text_field :brand_name %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :company_name %><br />
      <%= f.text_field :company_name %>
    </div>

    <div class="field">
      <%= f.label :registration_number %><br />
      <%= f.text_field :registration_number, disabled: true %>
    </div>

    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :full_address %><br />
      <%= f.text_field :full_address %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code %>
    </div>

    <div class="field">
      <%= f.label :payment_methods %><br />
      <%= f.text_area :payment_methods %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>

</div>

